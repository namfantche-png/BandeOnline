# Database (PostgreSQL)
DATABASE_URL="postgresql://postgres:postgres@postgres:5432/bissaumarket?schema=public"
DATABASE_HOST="localhost"
DATABASE_PORT="5432"
DATABASE_USER="postgres"
DATABASE_PASSWORD="postgres"
